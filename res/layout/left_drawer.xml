<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/left_drawer_bg"
    >
    <ImageView 
        android:id="@+id/left_drawer_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edmonton_logo"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/left_drawer_logo"
        android:layout_margin="6dp"/>
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="5dp"
	    android:background="@color/vertical_divider_bg"/>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal">
	    
	    <LinearLayout 
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:weightSum="2">
	        <RelativeLayout 
	            android:layout_width="90dp"
	            android:layout_height="match_parent"
	            android:id="@+id/left_drawer_button_collision"
	            android:layout_gravity="top"
	            android:layout_weight="1">
	            <TextView 
	                android:id="@+id/left_drawer_collosion_count"
	                android:layout_width="80dp"
	                android:layout_height="wrap_content"
	                android:text="@string/unknown"/>
	            <TextView 
	                android:id="@+id/left_drawer_collision_title"
	                android:layout_width="80dp"
	                android:layout_height="wrap_content"
	                android:text="@string/left_drawer_collision_title"
	                android:layout_below="@id/left_drawer_collosion_count"/>
	            <View 
	                android:layout_width="10dp"
	                android:layout_height="wrap_content"
	                android:background="@color/horizontal_divider_bg"
	                android:layout_toRightOf="@id/left_drawer_collision_title"
	                android:layout_toEndOf="@id/left_drawer_collision_title"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentEnd="true"/>
	        </RelativeLayout>
	        <View 
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="@color/vertical_divider_bg"
	            android:layout_marginStart="6dp"
	            android:layout_marginLeft="6dp"
	            android:layout_marginRight="16dp"
	            android:layout_marginEnd="16dp"/>
	        <RelativeLayout 
	            android:layout_width="90dp"
	            android:layout_height="wrap_content"
	            android:id="@+id/left_drawer_button_VRU"
	            android:layout_gravity="bottom"
	            android:layout_weight="1">
	            <TextView 
	                android:id="@+id/left_drawer_VRU_count"
	                android:layout_width="80dp"
	                android:layout_height="wrap_content"
	                android:text="@string/unknown"/>
	            <TextView 
	                android:id="@+id/left_drawer_VRU_title"
	                android:layout_width="80dp"
	                android:layout_height="wrap_content"
	                android:text="@string/left_drawer_VRU_title"
	                android:layout_below="@id/left_drawer_VRU_count"/>
	            <View 
	                android:layout_width="10dp"
	                android:layout_height="wrap_content"
	                android:background="@color/vertical_divider_bg"
	                android:layout_toRightOf="@id/left_drawer_VRU_title"
	                android:layout_toEndOf="@id/left_drawer_VRU_title"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentEnd="true"/>
	        </RelativeLayout>
	    </LinearLayout>
	   
		<ListView 
		    android:id="@android:id/list"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"/>
	    
	</LinearLayout>
</LinearLayout>